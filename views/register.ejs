<% include ./partials/header %>
<div class="container">
    <h1 style="text-align: center">Register</h1>
    <div style="width: 30%; margin: 25px auto; min-width: 300px">
        <form class="form-login rounded" action="/register" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="username">Username</label>
                <input class="form-control" type="text" id="username" name="username" placeholder="Username" maxlength="12" required>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input class="form-control" type="password" id="password" name="password" placeholder="Password" required>
            </div>
            <div class="form-group">
                <label for="image" class="btn btn-outline-info">Avatar</label>
                <input type="file" id="image" name="uploadImage" accept="image/*" placeholder="Image URL" required>
            </div>
            <button class="btn btn-light form-control" type="submit">Register!</button>
        </form>
    </div>
</div>

<% include ./partials/footer %>